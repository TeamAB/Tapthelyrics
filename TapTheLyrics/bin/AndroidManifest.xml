<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.project.tapthelyrics"
    android:versionCode="1"
    android:versionName="1.0" 
    android:installLocation="preferExternal">

    <uses-sdk
        android:minSdkVersion="8"
        android:targetSdkVersion="17" />
    
    <uses-permission android:name="android.permission.WRITE_EXTERNAL_STORAGE"></uses-permission>
	<uses-permission android:name="android.permission.INTERNET"></uses-permission>
	<uses-permission android:name="android.permission.ACCESS_NETWORK_STATE"></uses-permission>
	<uses-permission android:name="android.permission.READ_PHONE_STATE"></uses-permission>
	

    <application
        android:allowBackup="true"
        android:icon="@drawable/music_note48"
        android:label="@string/app_name"
        android:theme="@style/AppTheme" >
        <activity
            android:name="com.project.tapthelyrics.MainActivity"
            android:label="@string/app_name" >
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity android:name="com.project.tapthelyrics.SongListActivity" />
        <activity android:name="com.project.tapthelyrics.PlayActivity2" />
        <activity android:name="com.project.tapthelyrics.PlayActivity3" />
        <activity android:name="com.project.tapthelyrics.HighScoreActivity" />
        <activity android:name="com.project.tapthelyrics.DifficultyActivity" />
        <activity android:name="com.project.tapthelyrics.ServerListActivity" />
        <activity android:name="com.project.tapthelyrics.Instruction" />
    </application>

</manifest>